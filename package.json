{
    "name": "@syngenta-digital/scs",
    "author": "Paul Cruse, Technical Lead USCO Syngenta",
    "main": "src/index.js",
    "version": "1.0.3",
    "license": "Apache-2.0",
    "description": "Simple NPX tool to scan project with sonar-cloud",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/syngenta-digital/scs-node.git"
    },
    "bugs": {
        "url": "https://github.com/syngenta-digital/scs-node/issues"
    },
    "bin": {
        "scs": "bin/scs"
    },
    "scripts": {
        "test": "unittest=true nyc mocha --recursive ",
        "lint": "eslint src/**"
    },
    "dependencies": {
        "minimist": "^1.2.5",
        "slugify": "^1.4.5",
        "sonarqube-scanner": "^2.7.0",
        "yaml": "^1.10.0"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "mocha": "~8.1.1",
        "prettier": "^2.0.5"
    },
    "keywords": [
        "sonarcloud",
        "scan",
        "syngenta-digital"
    ],
    "engines": {
        "node": ">=12.14.1"
    },
    "nyc": {
        "temp-directory": "./node_modules/.nyc_output"
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "mocha": true
        },
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "plugins": [
            "prettier"
        ],
        "extends": [
            "plugin:prettier/recommended"
        ],
        "rules": {
            "prettier/prettier": [
                "warn",
                {
                    "trailingComma": "none",
                    "printWidth": 120,
                    "tabWidth": 4,
                    "singleQuote": true,
                    "bracketSpacing": false,
                    "arrowParens": "always"
                }
            ],
            "eqeqeq": "error",
            "prefer-destucturing": 0,
            "no-global-assign": 0,
            "rest-spread-spacing": 1,
            "no-restricted-syntax": 0,
            "consistent-return": 0,
            "import/no-dynamic-require": 0,
            "no-param-reassign": 0,
            "global-require": 0,
            "class-methods-use-this": 0,
            "no-underscore-dangle": 0,
            "camelcase": 0
        }
    }
}
